{
  "name": "mern-template-api",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production ?? npm run start:prod || npm run start:dev",
    "start:prod": "NODE_ENV=production node -r dotenv/config ./bin/www",
    "start:dev": "NODE_ENV=development nodemon -r dotenv/config ./bin/www",
    "lint": "eslint --fix src",
    "format": "prettier --write \"./**/*.{js,jsx,json,md}\"",
    "format:check": "prettier -- \"./**/*.{js,jsx,json,md}\"",
    "test": "jest --setupFiles dotenv/config --runInBand --forceExit",
    "style": "yarn format && yarn lint"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "~4.3.3",
    "dotenv": "^8.2.0",
    "eslint-plugin-jest": "^26.1.1",
    "express": "~4.17.1",
    "fs": "^0.0.1-security",
    "helmet": "^4.4.1",
    "http-errors": "~2.0.0",
    "if-env": "^1.0.4",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^3.3.2",
    "mongodb-memory-server": "^7.4.0",
    "mongoose": "^6.2.2",
    "morgan": "~1.10.0",
    "mpath": "^0.8.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-alpha.7",
    "@hack4impact-uiuc/eslint-plugin": "^2.0.10",
    "eslint": "^7.18.0",
    "faker": "5.5.3",
    "jest": "^27.5.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "testTimeout": 60000
  }
}
