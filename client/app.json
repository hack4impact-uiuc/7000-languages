{
  "expo": {
    "name": "7000 Languages",
    "owner": "7000languages",
    "slug": "7000-languages",
    "scheme": "com.h4i-7000-languages.7000-languages",
    "privacy": "public",
    "platforms": ["ios", "android"],
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#fff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.7000languages.app",
      "buildNumber": "0.0.2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon.png",
        "backgroundColor": "#DF4E47"
      },
      "package": "com.languages7000.app",
      "versionCode": 2
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": ["js", "jsx", "svg", "ts", "tsx"]
    },
    "androidStatusBar": {
      "barStyle": "dark-content"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you capture images related to your course."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {},
          "ios": {
            "deploymentTarget": "13.0"
          }
        }
      ]
    ]
  }
}
